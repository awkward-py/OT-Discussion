{
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "outputDirectory": "out",
  "ignore": [
    "node_modules",
    ".git",
    "README.md",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/__mocks__/**",  
    "src/**/__tests__/**"   
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-api-url.com"  
  }
}
