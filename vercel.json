{
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "outputDirectory": "out",
  "ignore": [
    "node_modules",
    ".git",
    "README.md",
    "src/**/*.test.js",  
    "src/**/*.spec.js"   
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/old-path",
      "destination": "/new-path"
    }
  ],
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
