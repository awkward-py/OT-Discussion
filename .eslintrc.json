{
  "extends": [
    "next/core-web-vitals",
    "standard",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": [
    "tailwindcss",
    "prettier"
  ],
  "rules": {
    "tailwindcss/no-unknown-classes": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,  // Optional: to avoid semicolons if you prefer
        "trailingComma": "es5", // Optional: if you want trailing commas in object literals
        "printWidth": 80, // Optional: set max line length
        "tabWidth": 2     // Optional: set tab width
      }
    ]
  },
  "settings": {
    "tailwindcss": {
      "callees": ["classnames"]
    }
  }
}
